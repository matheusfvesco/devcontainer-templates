{
    "id": "pytorch-gpu",
    "version": "0.0.1",
    "name": "Pytorch GPU (NGC and pipx)",
    "description": "A Python template with access to the host GPU (NVIDIA NGC Catalog), pipx and a few utilities",
    "documentationURL": "https://github.com/matheusfvesco/devcontainer-templates/tree/main/src/pythorch-gpu",
    "licenseURL": "https://github.com/matheusfvesco/devcontainer-templates/blob/main/LICENSE",
    "options": {
        "containerVersion": {
            "type": "string",
            "description": "Defines the NVIDIA Pytorch container version (year.month): ",
            "proposals": [
				"24.05",
                "24.04",
                "24.03",
                "24.02",
                "24.01",
                "23.12",
                "23.11",
                "23.10",
                "23.09",
                "23.08",
                "23.07",
                "23.06",
                "23.05",
                "23.04",
                "23.03",
                "23.02",
                "23.01",
                "22.12",
                "22.11",
                "22.10",
                "22.09",
                "22.08",
                "22.07",
                "22.06",
                "22.05",
                "22.04",
                "22.03",
                "22.02",
                "22.01"
            ],
            "default": "23.07"
        },
        "igpuVersion": {
            "type": "string",
            "description": "If image is for NVIDIA Developer Kits with igpu:",
            "proposals": [
				"py3-igpu",
                "py3"
            ],
            "default": "py3"
        }
    },
    "platforms": [
        "Any"
    ]
}
