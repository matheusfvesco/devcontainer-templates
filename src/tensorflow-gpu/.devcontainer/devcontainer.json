{
	// For quick reference: https://containers.dev/implementors/json_reference/
	"name": "Tensorflow GPU (CUDA)",
	"image": "nvcr.io/nvidia/tensorflow:${templateOption:containerVersion}-${templateOption:tensorflowVersion}-${templateOption:igpuVersion}",
	
	// or use the dockerfile if you need apt-utils, for example.
	//"build": {
	//  // Gives access to the project root, useful for pip installs inside Dockerfile
	//	"context": "..", 
	//	"dockerfile": "Dockerfile"
	//},

	// When using remote-ssh on windows, vscode forwards the WSL SSH socket.
	// in case you don't want to setup ssh on WSL, uncomment this to bind your
	// host ~/.ssh directory inside the container. THIS IS UNSAFE AND NOT RECOMMENDED,
	// BUT A POSSIBLE ALTERNATIVE IF NO ONE ELSE HAS ACCESS TO YOUR HOST. 
	//"mounts": [
	//	"type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly"
	//],

	// ðŸ‘‡ Use 'mounts' to make a list of local directories available inside the container. More info: https://code.visualstudio.com/remote/advancedcontainers/add-local-file-mount
	// "mounts": [],

	// ensures bash will be ran in POSIX compatible mode
	"containerEnv": {
		"POSIXLY_CORRECT": "1"
	},

	// run the container with all GPUs
	"runArgs": [
		"--gpus",
		"all"
	],
	
	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		// ZSH without OMZ
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "true",
			"configureZshAsDefaultShell": "true",
			"installOhMyZsh": "false",
			"installOhMyZshConfig": "false",
			"username": "vscode",
			"userUid": "1000",
			"userGid": "1000",
			"upgradePackages": "true"
		},

		// Python with Poetry, Ruff, Mypy, MonkeyType and Bandit, installed using pipx
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": "true",
			"toolsToInstall": "poetry,ruff,mypy,MonkeyType,bandit"
		},
		// git
		"ghcr.io/devcontainers/features/git:1": {
			"version": "latest",
			"ppa": "false"
		}
	},

	// ðŸ‘‡ configure tool specific options
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"python.defaultInterpreterPath": "/usr/bin/python"
			}
		}
	},
	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	
	// ðŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// ðŸ‘‡ Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}