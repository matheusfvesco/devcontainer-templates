{
    "id": "Tensorflow-gpu",
    "version": "0.0.1",
    "name": "Tensorflow GPU (CUDA and pipx)",
    "description": "A Python template with access to the host GPU (NVIDIA NGC Catalog), pipx and a few utilities",
    "documentationURL": "https://github.com/matheusfvesco/devcontainer-templates/tree/main/src/tensorflow-gpu",
    "licenseURL": "https://github.com/matheusfvesco/devcontainer-templates/blob/main/LICENSE",
    "options": {
        "containerVersion": {
            "type": "string",
            "description": "Defines the NVIDIA Tensorflow container version: ",
            "proposals": [
				"24.05",
                "24.04",
                "24.03",
                "24.02",
                "24.01",
                "23.12",
                "23.11",
                "23.10",
                "23.09",
                "23.08",
                "23.07",
                "23.06",
                "23.05",
                "23.04",
                "23.03",
                "23.02",
                "23.01",
                "22.12",
                "22.11",
                "22.10",
                "22.09",
                "22.08",
                "22.07",
                "22.06",
                "22.05",
                "22.04",
                "22.03",
                "22.02",
                "22.01"
            ],
            "default": "23.07"
        },
        "tensorflowVersion": {
            "type": "string",
            "description": "Tensorflow version (only tf2 from 23.04 and above):",
            "proposals": [
				"tf2",
                "tf1"
            ],
            "default": "tf2"
        },
        "igpuVersion": {
            "type": "string",
            "description": "If image is for NVIDIA Developer Kits with igpu (contaiver version 23.11 and above):",
            "proposals": [
				"-igpu",
                " "
            ],
            "default": " "
        }
    },
    "platforms": [
        "Any"
    ]
}
